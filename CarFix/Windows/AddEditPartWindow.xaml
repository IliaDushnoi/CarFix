<Window x:Class="CarFix.Windows.AddEditPartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarFix.Windows"
        mc:Ignorable="d"
        Title="Добавить/изменить запчасти" Height="450" Width="600">
    <Window.Resources>
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#d4eafffd"/>
            <Setter Property="Foreground" Value="#071C71"/>
        </Style>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#071C71"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="30 10 30 0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#071C71"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="30 0 30 0"/>
            <Setter Property="Width" Value="520"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Height" Value="25"/>
        </Style>
    </Window.Resources>
    <Grid Background="#d4eafffd">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Данные о запчасти" Style="{StaticResource HeaderTextBlockStyle}"/>
            <Label Content="Название запчасти" Style="{StaticResource LabelStyle}" />
            <TextBox Name="tbPartName" Style="{StaticResource TextBoxStyle}"/>
            <Label Content="Краткое описание" Style="{StaticResource LabelStyle}"/>
            <TextBox Name="tbPartDescription" Style="{StaticResource TextBoxStyle}"/>
            <Label Content="Стоимость за шт." Style="{StaticResource LabelStyle}"/>
            <TextBox Name="tbPartPrice" Style="{StaticResource TextBoxStyle}"/>
            <Label Content="Количество на складе" Style="{StaticResource LabelStyle}"/>
            <TextBox Name="tbQuantityInStock"  Style="{StaticResource TextBoxStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0 25 0 0">
                <Button Name="btnSavePart" Click="btnSavePart_Click" Content="Сохранить" Width="120" Height="35"  Margin="30 0 0 0" Style="{StaticResource TransparentButtonStyle}"/>
                <Button Name="btnCancel" Click="btnCancel_Click" Content="Отменить" Width="120" Height="35"  Margin="280 0 0 0" Style="{StaticResource TransparentButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
