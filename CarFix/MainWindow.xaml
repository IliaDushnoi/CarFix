<Window x:Class="CarFix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarFix"
        mc:Ignorable="d"
        Title="Главное меню" MaxHeight="740" MinHeight="740" Height="740" MaxWidth="1280" MinWidth="1280" Width="1280">
    <Window.Resources>
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFBEE6FD"/>
            <Setter Property="Foreground" Value="#071C71"/>
            <Setter Property="Width" Value="130"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#FFBEE6FD" Grid.Row="0" >
            <Button Name="btnClient" Click="btnClient_Click" Content="Клиенты" Style="{StaticResource TransparentButtonStyle}" Margin="100 0 0 0"/>
            <Button Name="btnCar" Click="btnCar_Click" Content="Автомобили" Style="{StaticResource TransparentButtonStyle}" Margin="100 0 0 0"/>
            <Button Name="btnService" Click="btnService_Click" Content="Услуги" Style="{StaticResource TransparentButtonStyle}" Margin="100 0 0 0"/>
            <Button Name="btnOrder" Click="btnOrder_Click" Content="Заказы" Style="{StaticResource TransparentButtonStyle}" Margin="100 0 0 0"/>
            <Button Name="btnPart" Click="btnPart_Click" Content="Запчасти" Style="{StaticResource TransparentButtonStyle}" Margin="100 0 0 0"/>
        </StackPanel>
        <Frame Name="mainFrame" Grid.Row="1"/>
    </Grid>
</Window>
