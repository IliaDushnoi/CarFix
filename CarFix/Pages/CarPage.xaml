<Page x:Class="CarFix.Pages.CarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarFix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1280"
      Title="CarPage">
    <Page.Resources>
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#d4eafffd"/>
            <Setter Property="Foreground" Value="#071C71"/>
        </Style>
        <Style x:Key="DeletTransparentButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#d4eafffd"/>
            <Setter Property="Foreground" Value="#700707"/>
        </Style>
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Width" Value="1250"/>
            <Setter Property="Height" Value="500"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#d4eafffd" Grid.Row="0">
            <Button Name="btnAddCar" Click="btnAddCar_Click" Content="Добавить" Style="{StaticResource TransparentButtonStyle}" Margin="50 0 0 0" Width="130" Height="35" />
            <Button Name="btnEditCar" Click="btnEditCar_Click" Content="Изменить" Style="{StaticResource TransparentButtonStyle}" Margin="20 0 0 0" Width="130" Height="35"/>
            <Button Name="btnDeletCar" Click="btnDeletCar_Click" Content="Удалить" Style="{StaticResource DeletTransparentButtonStyle}" Margin="20 0 0 0" Width="130" Height="35" />
            <Button Name="btnExportCar" Content="Сохранить" Style="{StaticResource TransparentButtonStyle}" Margin="450 0 0 0" Width="130" Height="35" Click="btnExportCar_Click" />
            <Button Name="btnImportCar" Content="Загрузить" Style="{StaticResource TransparentButtonStyle}" Margin="20 0 0 0" Width="130" Height="35" Click="btnImportCar_Click" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="• Список автомобилей" FontSize="25" FontFamily="Arial" Margin="10" Foreground="#071C71"/>
                <Button Name="btnRefresh" Click="btnRefresh_Click" Content="⟳" Style="{StaticResource TransparentButtonStyle}" Width="40" Height="40" Margin="933 0 0 0"/>
            </StackPanel>
            <DataGrid Name="dgCar" Grid.Row="1" Style="{StaticResource DataGridStyle}" MouseDoubleClick="dgCar_MouseDoubleClick" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
